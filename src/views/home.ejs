<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TickETCD</title>
  <!-- Link to Tailwind CSS CDN -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <!-- Link to your custom CSS file -->
  <link rel="stylesheet" href="css/style.css">
</head>
<body class="bg-gray-100">

  <%- include('header.ejs') %>

  <main class="max-w-4xl mx-auto px-4 py-8">

    <% if (typeof error_message !== 'undefined' && error_message.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md mb-4">
        <%= error_message %>
      </div>
    <% } %>

    <% if (typeof success_message !== 'undefined' && success_message.length > 0) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-md mb-4">
        <%= success_message %>
      </div>
    <% } %>

    <h2 class="text-2xl font-bold mb-4">Homepage</h2>

    <form action="/home" method="GET" class="mb-4 flex items-center space-x-4">
      <input type="text" name="search" placeholder="Search..." value="<%= typeof search !== 'undefined' ? search : '' %>" class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500">
      <select name="type" class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500">
        <option value="all" <%= typeof type !== 'undefined' && type === 'all' ? 'selected' : '' %>>All Event Types</option>
        <% if (eventTypes && eventTypes.length > 0) { %>
          <% eventTypes.forEach(eventType => { %>
            <option value="<%= eventType %>" <%= typeof type !== 'undefined' && type === eventType ? 'selected' : '' %>><%= eventType %></option>
          <% }); %>
        <% } %>
      </select>
      <select name="location" class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:border-blue-500">
        <% if (eventLocations && eventLocations.length > 0) { %>
          <% eventLocations.forEach(eventLocation => { %>
            <option value="<%= eventLocation %>" <%= typeof location !== 'undefined' && location === eventLocation ? 'selected' : '' %>><%= eventLocation %></option>
          <% }); %>
        <% } %>
        <option value="all" <%= typeof location === 'undefined' || location === 'all' ? 'selected' : '' %>>All Locations</option>
      </select>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition duration-300">Search</button>
    </form>

    <% if (events && events.length > 0) { %>
      <h3 class="text-lg font-semibold mb-2">Events:</h3>
      <ul class="list-disc list-inside">
        <% events.forEach(event => { %>
          <li><a href="/event?id=<%= event.id %>" class="text-blue-500 hover:underline"><%= event.name %></a></li>
        <% }); %>
      </ul>
    <% } else { %>
      <p>No events found!</p>
    <% } %>

  </main>

  <%- include('footer.ejs') %>

</body>
</html>
